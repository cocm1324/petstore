{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "moduleResolution": "Node",
        "strict": true,
        "allowJs": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "outDir": ".build",
        "rootDir": "./",
        "resolveJsonModule": true
    },
    "include": [ "src/**/*" ],
    "exclude": [ "node_modules", "**/*.spec.ts", "**/*.test.ts"]
}